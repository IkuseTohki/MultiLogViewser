<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:MultiLogViewer.ViewModels.Converters">

    <!-- 共通コンバーターのインスタンス定義 -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converters:SingleLineMessageConverter x:Key="SingleLineMessageConverter" />
    <converters:MultilineToVisibilityConverter x:Key="MultilineToVisibilityConverter" />
    <converters:DoubleToGridLengthConverter x:Key="DoubleToGridLengthConverter" />
    <converters:BookmarkColorToBrushConverter x:Key="BookmarkColorToBrushConverter" />
    <converters:KeyToHeaderConverter x:Key="KeyToHeaderConverter" />
    <converters:DateTimeFilterConverter x:Key="DateTimeFilterConverter" />

    <!--
        NOTE: CellStyleConverter は列ごとに個別の StyleConfig (状態) を持つ必要があるため、
        共通リソースとしては登録せず、コード側（DataGridColumnsBehavior）でインスタンス化します。
    -->

</ResourceDictionary>
