<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#B3E5FC"/>
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#03A9F4"/>
    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#0288D1"/>

    <!-- Accent Color -->
    <SolidColorBrush x:Key="AccentHueBrush" Color="#FFC107"/>

    <!-- Text/Icon Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212121"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#757575"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="PrimaryTextInverseBrush" Color="#FFFFFF"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>

</ResourceDictionary>
