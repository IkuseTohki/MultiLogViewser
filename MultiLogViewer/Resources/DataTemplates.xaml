<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 複数行メッセージの表示用テンプレート -->
    <DataTemplate x:Key="MultilineMessageTemplate">
        <Grid Margin="2,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="{Binding Message, Converter={StaticResource SingleLineMessageConverter}}"
                       TextTrimming="CharacterEllipsis" />
            <Path Grid.Column="1"
                  Width="12"
                  Height="12"
                  Margin="5,0,2,0"
                  VerticalAlignment="Center"
                  Data="{StaticResource MultilineIconGeometry}"
                  Fill="Gray"
                  Opacity="0.6"
                  Stretch="Uniform"
                  ToolTip="This entry contains multiple lines."
                  Visibility="{Binding Message, Converter={StaticResource MultilineToVisibilityConverter}}" />
        </Grid>
    </DataTemplate>

    <!-- 共通のブックマークアイコンテンプレート -->
    <DataTemplate x:Key="BookmarkIconTemplate">
        <Path Width="10"
              Height="10"
              Data="{StaticResource BookmarkIconGeometry}"
              Stretch="Uniform"
              Visibility="{Binding IsBookmarked, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Path.Style>
                <Style TargetType="Path">
                    <Setter Property="Fill" Value="#64B5F6" />
                    <!-- Default: Blue -->
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding BookmarkColor}" Value="Red">
                            <Setter Property="Fill" Value="#E57373" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding BookmarkColor}" Value="Green">
                            <Setter Property="Fill" Value="#81C784" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding BookmarkColor}" Value="Yellow">
                            <Setter Property="Fill" Value="#FFF176" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding BookmarkColor}" Value="Blue">
                            <Setter Property="Fill" Value="#64B5F6" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Path.Style>
        </Path>
    </DataTemplate>

</ResourceDictionary>
