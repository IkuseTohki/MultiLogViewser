<Window x:Class="MultiLogViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:MultiLogViewer.Behaviors"
        xmlns:converters="clr-namespace:MultiLogViewer.ViewModels.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MultiLogViewer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:MultiLogViewer.Models"
        xmlns:utils="clr-namespace:MultiLogViewer.Utils"
        Title="Multi Log Viewer"
        Width="1000"
        Height="600"
        Background="{StaticResource WindowBackgroundBrush}"
        mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Key="F"
                    Command="{Binding OpenSearchCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="C"
                    Command="{Binding CopyCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="G"
                    Command="{Binding GoToDateCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="B"
                    Command="{Binding ToggleBookmarkCommand}"
                    Modifiers="Control" />
        <KeyBinding Key="F2" Command="{Binding NextBookmarkCommand}" />
        <KeyBinding Key="F2"
                    Command="{Binding PreviousBookmarkCommand}"
                    Modifiers="Shift" />
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}" />
    </Window.InputBindings>
    <DockPanel>

        <StackPanel Margin="5"
                    DockPanel.Dock="Top"
                    Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Border Background="White"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="200" />
                        </Grid.ColumnDefinitions>

                        <!-- Filter Icon as a Button -->
                        <Button Grid.Column="0"
                                Width="24"
                                Height="24"
                                behaviors:ButtonContextMenuBehavior.IsEnabled="True"
                                Style="{StaticResource IconButtonStyle}"
                                ToolTip="拡張フィルター">
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="拡張フィルターを追加" ItemsSource="{Binding AvailableAdditionalDataKeys}">
                                        <MenuItem.ItemContainerStyle>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Header">
                                                    <Setter.Value>
                                                        <MultiBinding Converter="{StaticResource KeyToHeaderConverter}">
                                                            <Binding Path="." />
                                                            <Binding Path="DataContext.DisplayColumns" RelativeSource="{RelativeSource AncestorType=ContextMenu}" />
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Command" Value="{Binding DataContext.AddExtensionFilterCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                <Setter Property="CommandParameter" Value="{Binding}" />
                                            </Style>
                                        </MenuItem.ItemContainerStyle>
                                    </MenuItem>
                                    <MenuItem Header="Bookmarkフィルターを追加">
                                        <MenuItem Command="{Binding AddBookmarkFilterCommand}" Header="すべて (All)">
                                            <MenuItem.Icon>
                                                <Rectangle Width="12"
                                                           Height="12"
                                                           Fill="Black" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Command="{Binding AddBookmarkFilterCommand}"
                                                  CommandParameter="{x:Static models:BookmarkColor.Red}"
                                                  Header="Red">
                                            <MenuItem.Icon>
                                                <Rectangle Width="12"
                                                           Height="12"
                                                           Fill="#E57373" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Command="{Binding AddBookmarkFilterCommand}"
                                                  CommandParameter="{x:Static models:BookmarkColor.Blue}"
                                                  Header="Blue">
                                            <MenuItem.Icon>
                                                <Rectangle Width="12"
                                                           Height="12"
                                                           Fill="#64B5F6" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Command="{Binding AddBookmarkFilterCommand}"
                                                  CommandParameter="{x:Static models:BookmarkColor.Green}"
                                                  Header="Green">
                                            <MenuItem.Icon>
                                                <Rectangle Width="12"
                                                           Height="12"
                                                           Fill="#81C784" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Command="{Binding AddBookmarkFilterCommand}"
                                                  CommandParameter="{x:Static models:BookmarkColor.Yellow}"
                                                  Header="Yellow">
                                            <MenuItem.Icon>
                                                <Rectangle Width="12"
                                                           Height="12"
                                                           Fill="#FFF176" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Command="{Binding SavePresetCommand}" Header="フィルターを保存..." />
                                    <MenuItem Command="{Binding LoadPresetCommand}" Header="フィルターを読み込む..." />
                                </ContextMenu>
                            </Button.ContextMenu>
                            <Path Width="12"
                                  Height="12"
                                  Data="{StaticResource FilterIconGeometry}"
                                  Fill="Gray"
                                  Stretch="Uniform" />
                        </Button>

                        <!-- Filter Text and Clear Button -->
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Margin="0"
                                     Padding="2,0"
                                     VerticalContentAlignment="Center"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />

                            <Button Grid.Column="1"
                                    Width="16"
                                    Height="16"
                                    Margin="0,0,4,0"
                                    VerticalAlignment="Center"
                                    Command="{Binding ClearFilterCommand}"
                                    ToolTip="Clear filter">
                                <Button.Style>
                                    <Style BasedOn="{StaticResource IconButtonStyle}" TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding FilterText}" Value="">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding FilterText}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Path Width="8"
                                      Height="8"
                                      Data="{StaticResource CloseIconGeometry}"
                                      Fill="{StaticResource SecondaryTextBrush}"
                                      Stretch="Uniform" />
                            </Button>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Bookmark Panel Toggle -->
                <ToggleButton Width="24"
                              Height="24"
                              Margin="5,0,0,0"
                              VerticalAlignment="Center"
                              IsChecked="{Binding IsBookmarkPanelVisible}"
                              Style="{StaticResource IconToggleButtonStyle}"
                              ToolTip="Toggle Bookmark Panel">
                    <Path Width="14"
                          Height="14"
                          Data="{StaticResource BookmarkIconGeometry}"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                          Stretch="Uniform" />
                </ToggleButton>

                <Button Width="24"
                        Height="24"
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource IconButtonStyle}"
                        ToolTip="Refresh logs from config">
                    <Path Width="16"
                          Height="16"
                          Data="{StaticResource RefreshIconGeometry}"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          Stretch="Uniform" />
                </Button>

                <!-- Tail (Wolf Tail) Toggle Button -->
                <ToggleButton Width="24"
                              Height="24"
                              Margin="10,0,0,0"
                              VerticalAlignment="Center"
                              IsChecked="{Binding IsTailEnabled}"
                              Style="{StaticResource IconToggleButtonStyle}"
                              ToolTip="Tail (Follow newest logs)">
                    <Path Width="16"
                          Height="16"
                          Stretch="Uniform">
                        <Path.Style>
                            <Style TargetType="Path">
                                <Setter Property="Data" Value="{StaticResource WolfTailInactiveIconGeometry}" />
                                <Setter Property="Fill" Value="Gray" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                        <Setter Property="Data" Value="{StaticResource WolfTailActiveIconGeometry}" />
                                        <Setter Property="Fill" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Path.Style>
                    </Path>
                </ToggleButton>
            </StackPanel>

            <!-- Active Extension Filters (Badges) -->
            <ItemsControl Margin="0,5,0,0" ItemsSource="{Binding ActiveExtensionFilters}">
                <ItemsControl.Style>
                    <Style TargetType="ItemsControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ActiveExtensionFilters.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.Style>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

        </StackPanel>

        <!-- Split View Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="{Binding DetailPanelWidth, Mode=TwoWay, Converter={StaticResource DoubleToGridLengthConverter}}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDetailPanelVisible}" Value="False">
                                    <Setter Property="Width" Value="0" />
                                    <Setter Property="MinWidth" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="250" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBookmarkPanelVisible}" Value="False">
                                    <Setter Property="Width" Value="0" />
                                    <Setter Property="MinWidth" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- Log DataGrid Container -->
            <Grid Grid.Column="0">
                <DataGrid behaviors:DataGridColumnsBehavior.BindableColumns="{Binding DisplayColumns}"
                          behaviors:DataGridScrollToSelectionBehavior.AutoScrollOnCollectionChanged="True"
                          behaviors:DataGridScrollToSelectionBehavior.SelectedItem="{Binding SelectedLogEntry}"
                          behaviors:DataGridTailBehavior.IsAtBottom="{Binding IsAtBottom}"
                          behaviors:DataGridTailBehavior.MonitorScroll="True"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          HeadersVisibility="Column"
                          ItemsSource="{Binding LogEntriesView}"
                          SelectedItem="{Binding SelectedLogEntry, Mode=TwoWay}" />

                <!-- Floating Detail Panel Toggle -->
                <Button Width="16"
                        Height="32"
                        Margin="0,0,-8,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Panel.ZIndex="100"
                        Background="{StaticResource WindowBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Command="{Binding ToggleDetailPanelCommand}">
                    <Button.Style>
                        <Style BasedOn="{StaticResource IconButtonStyle}" TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDetailPanelVisible}" Value="False">
                                    <Setter Property="Margin" Value="0,0,0,0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Path Width="8"
                          Height="8"
                          Fill="{StaticResource PrimaryTextBrush}"
                          Stretch="Uniform">
                        <Path.Style>
                            <Style TargetType="Path">
                                <Setter Property="Data" Value="{StaticResource ChevronLeftIconGeometry}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDetailPanelVisible}" Value="True">
                                        <Setter Property="Data" Value="{StaticResource ChevronRightIconGeometry}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Path.Style>
                    </Path>
                </Button>

                <!-- Loading Overlay -->
                <Grid Panel.ZIndex="200"
                      Background="#80FFFFFF"
                      Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   Text="Loading logs..." />
                        <ProgressBar Width="150"
                                     Height="4"
                                     Margin="0,10,0,0"
                                     IsIndeterminate="True" />
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Detail Panel Splitter -->
            <GridSplitter Grid.Column="1"
                          Width="4"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          ResizeBehavior="PreviousAndNext" />

            <!-- Detail Panel -->
            <Border Grid.Column="2"
                    Background="{StaticResource ControlBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Visibility="{Binding IsDetailPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Margin="0,0,0,10"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryHueMidBrush}"
                                   Text="Log Details" />

                        <TextBlock Margin="0,5,0,2"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="Gray"
                                   Text="FULL PATH" />
                        <TextBox Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="11"
                                 IsReadOnly="True"
                                 Text="{Binding SelectedLogEntry.FileFullPath, Mode=OneWay}"
                                 TextWrapping="Wrap" />

                        <TextBlock Margin="0,15,0,2"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="Gray"
                                   Text="RAW LOG" />
                        <TextBox Margin="0,5,0,10"
                                 Padding="5"
                                 AcceptsReturn="True"
                                 Background="White"
                                 BorderBrush="{StaticResource BorderBrush}"
                                 BorderThickness="1"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 Text="{Binding SelectedLogEntry.RawLine, Mode=OneWay}"
                                 TextWrapping="Wrap" />
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Bookmark Panel Splitter -->
            <GridSplitter Grid.Column="3"
                          Width="4"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="Transparent"
                          ResizeBehavior="PreviousAndNext" />

            <!-- Bookmark Panel -->
            <Border Grid.Column="4"
                    Background="{StaticResource ControlBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Visibility="{Binding IsBookmarkPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryHueMidBrush}"
                                   Text="Bookmarks" />
                        <Button HorizontalAlignment="Right"
                                Command="{Binding OpenDigestCommand}"
                                Style="{StaticResource IconButtonStyle}"
                                ToolTip="Show Analysis Digest">
                            <Path Width="14"
                                  Height="14"
                                  Data="{StaticResource MultilineIconGeometry}"
                                  Fill="{StaticResource PrimaryHueMidBrush}"
                                  Stretch="Uniform" />
                        </Button>
                    </Grid>

                    <!-- Memo & Color Editor (Shared Area) -->
                    <Grid Grid.Row="1"
                          Margin="0,0,0,10"
                          Visibility="{Binding SelectedLogEntry.IsBookmarked, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Color Palette Icon and chips -->
                        <Path Grid.Row="0"
                              Grid.Column="0"
                              Width="14"
                              Height="14"
                              Margin="0,0,0,5"
                              Data="{StaticResource PaletteIconGeometry}"
                              Fill="Gray"
                              Stretch="Uniform" />
                        <StackPanel Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="8,0,0,5"
                                    Orientation="Horizontal">
                            <StackPanel.Resources>
                                <Style x:Key="ColorChipStyle" TargetType="Button">
                                    <Setter Property="Width" Value="14" />
                                    <Setter Property="Height" Value="14" />
                                    <Setter Property="Margin" Value="0,0,8,0" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Width="{TemplateBinding Width}"
                                                        Height="{TemplateBinding Height}"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="7" />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </StackPanel.Resources>

                            <Button Background="#64B5F6"
                                    Command="{Binding DataContext.SetBookmarkColorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:BookmarkColor.Blue}"
                                    Style="{StaticResource ColorChipStyle}"
                                    ToolTip="Blue" />
                            <Button Background="#E57373"
                                    Command="{Binding DataContext.SetBookmarkColorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:BookmarkColor.Red}"
                                    Style="{StaticResource ColorChipStyle}"
                                    ToolTip="Red" />
                            <Button Background="#81C784"
                                    Command="{Binding DataContext.SetBookmarkColorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:BookmarkColor.Green}"
                                    Style="{StaticResource ColorChipStyle}"
                                    ToolTip="Green" />
                            <Button Background="#FFF176"
                                    Command="{Binding DataContext.SetBookmarkColorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{x:Static models:BookmarkColor.Yellow}"
                                    Style="{StaticResource ColorChipStyle}"
                                    ToolTip="Yellow" />
                        </StackPanel>

                        <!-- Memo Icon and text box -->
                        <Path Grid.Row="1"
                              Grid.Column="0"
                              Width="14"
                              Height="14"
                              Data="{StaticResource MemoIconGeometry}"
                              Fill="Gray"
                              Stretch="Uniform" />
                        <TextBox Grid.Row="1"
                                 Grid.Column="1"
                                 Margin="0,0,0,0"
                                 Padding="3"
                                 AcceptsReturn="False"
                                 FontSize="11"
                                 Text="{Binding SelectedLogEntry.BookmarkMemo, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <!-- List -->
                    <ListBox Grid.Row="2"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemsSource="{Binding BookmarkedEntries}"
                             SelectedItem="{Binding SelectedLogEntry}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                      Margin="0,2,5,0"
                                                      VerticalAlignment="Top"
                                                      Content="{Binding}"
                                                      ContentTemplate="{StaticResource BookmarkIconTemplate}" />
                                    <StackPanel Grid.Column="1">
                                        <TextBlock FontSize="10"
                                                   Foreground="DimGray"
                                                   Text="{Binding Timestamp, StringFormat='yyyy/MM/dd HH:mm:ss'}" />
                                        <TextBlock MaxHeight="32"
                                                   FontSize="11"
                                                   Text="{Binding Message}"
                                                   TextTrimming="CharacterEllipsis" />
                                        <TextBlock FontSize="10"
                                                   FontStyle="Italic"
                                                   Foreground="{StaticResource PrimaryHueMidBrush}"
                                                   Text="{Binding BookmarkMemo}"
                                                   Visibility="{Binding BookmarkMemo, Converter={StaticResource MultilineToVisibilityConverter}, ConverterParameter=NotEmpty}" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>