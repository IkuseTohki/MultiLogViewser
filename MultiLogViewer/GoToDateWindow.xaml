<Window x:Class="MultiLogViewer.GoToDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MultiLogViewer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Go To Date"
        Width="258"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/GoToDateStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        </ResourceDictionary>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding CancelCommand}" />
    </Window.InputBindings>

    <Border Padding="2"
            Background="{StaticResource WindowBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <!-- Drag Handle -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Drag Handle -->
            <Border Grid.Column="0"
                    Background="Transparent"
                    Cursor="SizeAll" />

            <Grid Grid.Column="1" Margin="2,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Row 1: Primary Controls -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- Toggle Button -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Date Box -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Time Box -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Jump Button -->
                        <ColumnDefinition Width="Auto" />
                        <!-- Close Button -->
                    </Grid.ColumnDefinitions>

                    <!-- Expand/Collapse Relative Section -->
                    <Button Grid.Column="0"
                            Width="20"
                            Height="22"
                            Margin="0,0,2,0"
                            Command="{Binding ToggleRelativeCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="Toggle Shift Section">
                        <Path Width="8"
                              Height="8"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              Stretch="Uniform">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRelativeVisible}" Value="False">
                                            <Setter Property="Data" Value="{StaticResource ChevronRightIconGeometry}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsRelativeVisible}" Value="True">
                                            <Setter Property="Data" Value="{StaticResource ChevronDownIconGeometry}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Button>

                    <!-- Date Input with Icon -->
                    <Border Grid.Column="1"
                            Width="95"
                            Style="{StaticResource InBoxInputContainerStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"
                                    Command="{Binding OpenCalendarCommand}"
                                    CommandParameter="{Binding ElementName=TargetDatePicker}"
                                    Style="{StaticResource IconButtonStyle}">
                                <Path Data="{StaticResource CalendarIconGeometry}" Style="{StaticResource InBoxIconPathStyle}" />
                            </Button>
                            <DatePicker x:Name="TargetDatePicker"
                                        Grid.Column="1"
                                        SelectedDate="{Binding TargetDate}"
                                        Style="{StaticResource SeamlessDatePickerStyle}" />
                        </Grid>
                    </Border>

                    <!-- Time Input with Icon -->
                    <Border Grid.Column="2" Margin="2,0">
                        <Border.Style>
                            <Style BasedOn="{StaticResource InBoxInputContainerStyle}" TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSecondsEnabled}" Value="False">
                                        <Setter Property="Width" Value="55" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsSecondsEnabled}" Value="True">
                                        <Setter Property="Width" Value="75" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Path Grid.Column="0"
                                  Data="{StaticResource ClockIconGeometry}"
                                  Style="{StaticResource InBoxIconPathStyle}" />
                            <TextBox Grid.Column="1"
                                     FontFamily="Consolas"
                                     FontSize="11"
                                     Style="{StaticResource SeamlessTextBoxStyle}"
                                     Text="{Binding TargetTime}" />
                        </Grid>
                    </Border>

                    <!-- Jump (Go) -->
                    <Button Grid.Column="3"
                            Width="22"
                            Height="22"
                            Command="{Binding JumpCommand}"
                            IsDefault="True"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="Jump to Date">
                        <Path Width="10"
                              Height="10"
                              Data="{StaticResource PlayIconGeometry}"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              Stretch="Uniform" />
                    </Button>

                    <!-- Close -->
                    <Button Grid.Column="4"
                            Width="18"
                            Height="18"
                            Margin="2,0,0,0"
                            Command="{Binding CancelCommand}"
                            IsCancel="True"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="Close">
                        <Path Width="9"
                              Height="9"
                              Data="{StaticResource CloseIconGeometry}"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              Stretch="Uniform" />
                    </Button>
                </Grid>

                <!-- Row 2: Relative Shift (Collapsible) -->
                <Border Grid.Row="1"
                        Margin="0,4,0,0"
                        Padding="0,4,0,0"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,1,0,0"
                        Visibility="{Binding IsRelativeVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="22" />
                            <!-- Toggle Button Offset -->
                            <ColumnDefinition Width="Auto" />
                            <!-- Label -->
                            <ColumnDefinition Width="Auto" />
                            <!-- Value -->
                            <ColumnDefinition Width="Auto" />
                            <!-- Unit -->
                            <ColumnDefinition Width="Auto" />
                            <!-- Arrows -->
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="1"
                                   VerticalAlignment="Center"
                                   FontSize="10"
                                   Foreground="Gray"
                                   Text="SHIFT BY" />

                        <TextBox Grid.Column="2"
                                 Width="35"
                                 Height="20"
                                 Margin="8,0,5,0"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 FontSize="10"
                                 Text="{Binding RelativeValue}" />

                        <ComboBox Grid.Column="3"
                                  Width="55"
                                  Height="20"
                                  SelectedValue="{Binding RelativeUnit}"
                                  SelectedValuePath="Tag"
                                  Style="{StaticResource ModernComboBoxStyle}">
                            <ComboBoxItem Content="Sec"
                                          Tag="Seconds"
                                          Visibility="{Binding IsSecondsEnabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <ComboBoxItem Content="Min"
                                          IsSelected="True"
                                          Tag="Minutes" />
                            <ComboBoxItem Content="Hour" Tag="Hours" />
                            <ComboBoxItem Content="Day" Tag="Days" />
                        </ComboBox>

                        <StackPanel Grid.Column="4"
                                    Margin="5,0,0,0"
                                    Orientation="Horizontal">
                            <Button Width="20"
                                    Height="20"
                                    Margin="0,0,1,0"
                                    Command="{Binding PreviousCommand}"
                                    Style="{StaticResource IconButtonStyle}"
                                    ToolTip="Back">
                                <Path Width="8"
                                      Height="8"
                                      Data="{StaticResource ArrowUpIconGeometry}"
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      Stretch="Uniform" />
                            </Button>
                            <Button Width="20"
                                    Height="20"
                                    Command="{Binding NextCommand}"
                                    Style="{StaticResource IconButtonStyle}"
                                    ToolTip="Forward">
                                <Path Width="8"
                                      Height="8"
                                      Data="{StaticResource ArrowDownIconGeometry}"
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      Stretch="Uniform" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
